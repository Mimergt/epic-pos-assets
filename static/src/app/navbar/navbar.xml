<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <!-- Override POS Navbar Logo -->
    <t t-name="point_of_sale.Navbar" t-inherit="point_of_sale.Navbar" t-inherit-mode="extension" owl="1">
        <xpath expr="//img[@class='pos-logo']" position="attributes">
            <attribute name="t-att-src">'/web/image/res.company/' + pos.company.id + '/logo?unique=' + Date.now()</attribute>
        </xpath>
    </t>

</templates>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Upload Assets Wizard Form View -->
        <record id="view_epic_wizard_form" model="ir.ui.view">
            <field name="name">epic.wizard.form</field>
            <field name="model">epic.wizard</field>
            <field name="arch" type="xml">
                <form string="Upload Assets">
                    <sheet>
                        <div class="oe_title">
                            <h1>Upload POS Assets</h1>
                            <p class="oe_grey">
                                Upload a ZIP file containing logos and images for your Point of Sale.
                                Supported formats: PNG, JPG, JPEG, GIF, SVG, ICO, WebP.
                            </p>
                        </div>
                        <group>
                            <field name="zip_file" filename="zip_filename" widget="binary" 
                                   help="Select a ZIP file containing your assets"/>
                            <field name="zip_filename" invisible="1"/>
                            <field name="asset_type" help="Filter assets by type or upload all"/>
                        </group>
                        <div class="oe_highlight">
                            <p><strong>Instructions:</strong></p>
                            <ul>
                                <li>Create a ZIP file with your image assets</li>
                                <li>Name your files descriptively (e.g., "logo.png", "background.jpg")</li>
                                <li>Files containing "logo" will be categorized as logos</li>
                                <li>Files containing "background" or "bg" will be categorized as backgrounds</li>
                                <li>Files containing "favicon" or "icon" will be categorized as favicons</li>
                            </ul>
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_upload_assets" string="Upload Assets" 
                                type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Upload POS Logo Wizard Form View -->
        <record id="view_epic_wizard_pos_logo_form" model="ir.ui.view">
            <field name="name">epic.wizard.pos.logo.form</field>
            <field name="model">epic.wizard.pos.logo</field>
            <field name="arch" type="xml">
                <form string="Upload POS Logo">
                    <sheet>
                        <div class="oe_title">
                            <h1>Upload POS Header Logo</h1>
                            <p class="oe_grey">
                                Upload the logo that will be displayed in the POS header (next to the search bar).
                                Recommended size: 42px height, PNG format with transparent background.
                            </p>
                        </div>
                        <group>
                            <field name="logo_file" filename="logo_filename" widget="binary" 
                                   help="Select the logo image file (PNG, JPG, GIF, SVG, or WebP)"/>
                            <field name="logo_filename" invisible="1"/>
                        </group>
                        <div class="alert alert-info" role="alert">
                            <p><strong>Recomendaciones:</strong></p>
                            <ul>
                                <li>Formato recomendado: PNG con fondo transparente</li>
                                <li>Altura: 42px (el ancho se ajustará automáticamente)</li>
                                <li>El logo aparecerá en la parte superior del POS, junto a la barra de búsqueda</li>
                                <li>Después de subir, refresca el POS (Ctrl+Shift+R) para ver los cambios</li>
                            </ul>
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_upload_pos_logo" string="Upload and Apply Logo" 
                                type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
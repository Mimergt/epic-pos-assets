<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Asset Manager List View -->
        <record id="view_epic_asset_list" model="ir.ui.view">
            <field name="name">epic.asset.list</field>
            <field name="model">epic.asset</field>
            <field name="arch" type="xml">
                <list string="POS Assets">
                    <field name="name"/>
                    <field name="asset_type"/>
                    <field name="asset_category"/>
                    <field name="file_name"/>
                    <field name="file_path"/>
                    <field name="applied" widget="boolean_toggle"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Asset Manager Form View -->
        <record id="view_epic_asset_form" model="ir.ui.view">
            <field name="name">epic.asset.form</field>
            <field name="model">epic.asset</field>
            <field name="arch" type="xml">
                <form string="POS Asset">
                    <header>
                        <button name="action_apply_asset" string="Apply Asset" type="object" 
                                class="oe_highlight" icon="fa-check"
                                help="Apply this asset to the system"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Applied" bg_color="text-bg-success" invisible="not applied"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Asset name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="asset_type"/>
                                <field name="asset_category"/>
                                <field name="file_path" readonly="1"/>
                                <field name="applied" widget="boolean"/>
                            </group>
                            <group>
                                <field name="applied_date" readonly="1" invisible="not applied"/>
                            </group>
                        </group>
                        <group>
                            <field name="file_data" filename="file_name" widget="image" class="oe_avatar"/>
                            <field name="file_name"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Description..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>